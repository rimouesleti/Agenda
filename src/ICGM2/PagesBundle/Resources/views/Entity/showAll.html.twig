{% extends "::base.html.twig" %}
{%block breadcrumb%}
    <li class="active">{% trans %}Contact list{% endtrans %}</li>
    {%endblock%}
    {% block mainContent %}
        {% stylesheets  filter='cssrewrite' 
 'bundles/pages/css/jquery.dataTables.css'

        %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <div class="container" >

        <!-- start: PAGE CONTENT -->
        <div class="row" style="margin-top: 20px;">
            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-white">
                    <div class="panel-heading">

                        <div class="panel-tools">
                            <div class="dropdown">
                                <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                                    <i class="fa fa-cog"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                                    <li>
                                        <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a>
                                    </li>
                                    <li>
                                        <a class="panel-refresh" href="#">
                                            <i class="fa fa-refresh"></i> <span>Refresh</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a class="panel-expand" href="#">
                                            <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12 space20">
                            <a class="btn btn-green add-row" href="{{path('entities/new')}}">
                                 {% trans %}Add New{% endtrans %} <i class="fa fa-plus"></i>
                            </a>
                        </div>
                        <table class="table table-striped table-hover table-full-width display"  cellspacing="0" width="100%" id="example">
                            <thead>
                                <tr>
                                    <th class="center">#</th>
                                    <th>{% trans %}Name{% endtrans %}</th>
                                    <th class="hidden-xs">{% trans %}Creator{% endtrans %}</th>
                                   
                                    <th class="hidden-xs">{% trans %}Status{% endtrans %}</th>
                                    <th>Email</th>
                                    <th  class="hidden-xs">{% trans %}Speciality{% endtrans %}</th>                                   
                                    <th class="hidden-xs">{% trans %}Country{% endtrans %}</th>
                                    <th class="hidden-xs">{% trans %}City{% endtrans %}</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}

                                    <tr>
                                        <td class="center">
                                            {% if entity.profilePicture %}
                                                <img src="{{ asset("uploads/entities/") ~ entity.profilePicture  }} " alt="" width="25" height="25">
                                            {% else %}
                                                {%if entity.sort == "company"%}
                                                    <img src="{{ asset('bundles/pages/images/Company.png') }} " alt="" width="25" height="25">

                                                {%else%}
                                                    <img src="{{ asset('bundles/pages/images/anonymous.jpg') }} " alt="" width="25" height="25">
                                                {%endif%}  
                                            {% endif %}
                                        </td>
                                        <td>{{ entity.name|e }}</td>
                                        <td class="hidden-xs">{{ entity.user }}</td>                           
                                        
                                        <td class="hidden-xs">{{ entity.type }}</td>
                                        <td>{{ entity.email }}</td>
                                        <td  class="hidden-xs">{{ entity.speciality }}</td>
                                        <td class="hidden-xs">{{ entity.country }}</td>
                                        <td class="hidden-xs">{{ entity.city }}</td>

                                        <td class="center">
                                            <div class="visible-md visible-lg hidden-sm hidden-xs">
                                                <a href="{{ path('entity/edit', {'id': entity.id}) }}" class="btn btn-xs btn-blue tooltips" data-placement="top" data-original-title="{% trans %}Edit{% endtrans %}"><i class="fa fa-edit"></i></a>
                                                <a href="{{ path('entity', {'id': entity.id}) }}" class="btn btn-xs btn-green tooltips" data-placement="top" data-original-title="{% trans %}Show{% endtrans %}"><i class="fa fa-share"></i></a>
                                                <a href="{{ path('entities/delete', {'id': entity.id}) }}" class="btn btn-xs btn-red tooltips" data-placement="top" data-original-title="{% trans %}Remove{% endtrans %}" ><i class="fa fa-times fa fa-white"></i></a>
                                            </div>
                                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                <div class="btn-group">
                                                    <a class="btn btn-green dropdown-toggle btn-sm" data-toggle="dropdown" href="#">
                                                        <i class="fa fa-cog"></i> <span class="caret"></span>
                                                    </a>
                                                    <ul role="menu" class="dropdown-menu pull-right dropdown-dark">
                                                        <li>
                                                            <a role="menuitem" tabindex="-1" href="{{ path('entity/edit', {'id': entity.id}) }}">
                                                                <i class="fa fa-edit"></i> {% trans %}Edit{% endtrans %}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a role="menuitem" tabindex="-1" href="{{ path('entity', {'id': entity.id}) }}">
                                                                <i class="fa fa-share"></i> {% trans %}Show{% endtrans %}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a role="menuitem" tabindex="-1" href="{{ path('entities/delete', {'id': entity.id}) }}">
                                                                <i class="fa fa-times"></i> {% trans %}Remove{% endtrans %}
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div></td>

                                    </tr>

                                {% endfor %}


                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- end: DYNAMIC TABLE PANEL -->
            </div>
        </div>

        <!-- end: PAGE CONTENT-->

        <div class="subviews">
            <div class="subviews-container"></div>
        </div>
    </div>

    {% javascripts 
        'bundles/user/js/jQuery/jquery-2.1.1.min.js'   
         'bundles/pages/js/jquery.dataTables.min.js'    
            'bundles/pages/js/table-data.js' 
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}


{%endblock%}