{% extends "::base.html.twig" %}
{%block breadcrumb%}
    <li class="active">{% trans %}History{% endtrans %}</li>
    {%endblock%}
    {% block mainContent %}
        {% stylesheets  filter='cssrewrite' 
 'bundles/pages/css/jquery.dataTables.css'

        %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <div class="container" >

        <!-- start: PAGE CONTENT -->
        <div class="row" style="margin-top: 20px;">
            <div class="col-md-12">
                <!-- start: DYNAMIC TABLE PANEL -->
                <div class="panel panel-white">
                    <div class="panel-heading">

                        <div class="panel-tools">
                            <div class="dropdown">
                                <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey">
                                    <i class="fa fa-cog"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                                    <li>
                                        <a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>Collapse</span> </a>
                                    </li>
                                    <li>
                                        <a class="panel-refresh" href="#">
                                            <i class="fa fa-refresh"></i> <span>Refresh</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a class="panel-expand" href="#">
                                            <i class="fa fa-expand"></i> <span>Fullscreen</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        {% if is_granted('ROLE_ADMIN') %}
                            <table class="table table-striped table-hover table-full-width display"  cellspacing="0" width="100%" id="example">
                                <thead>
                                    <tr>
                                        <th>Action</th>
                                        <th>Date</th>



                                    </tr>
                                </thead>
                                <tbody>
                                    {% for history in histories %}

                                        <tr>
                                            <td>
                                                {%if history.featureType=="entity"%}
                                                    <i class="fa fa-user"></i>
                                                {%elseif history.featureType=="event"%}
                                                    <i class="fa fa-clock-o"></i>
                                                {%else%}
                                                    <i class="fa fa-tasks"></i>
                                                {% endif %}
                                                <span class="bold-text text-small">{{history.user}} {{history.action}} 
                                                    {%if history.featureId%}<a href="{{ path(history.featureType, {'id': history.featureId}) }}">{{history.featureName}}</a>{%else%} {{history.featureName}} {%endif%} </span>
                                            </td>
                                            <td style="color: #ADADAD;">{{history.date|date('d-m-Y H:i')}}</td>



                                        </tr>

                                    {% endfor %}


                                </tbody>
                            </table>
                        {%else%}
                            <div class="alert alert-danger" role="alert">
                                <i class="fa fa-exclamation-triangle"></i> {% trans %}You don't have enough privilege{% endtrans %}.

                            </div>
                        {% endif %}
                    </div>
                </div>
                <!-- end: DYNAMIC TABLE PANEL -->
            </div>
        </div>

        <!-- end: PAGE CONTENT-->

        <div class="subviews">
            <div class="subviews-container"></div>
        </div>
    </div>

    {% javascripts 
        'bundles/user/js/jQuery/jquery-2.1.1.min.js'   
         'bundles/pages/js/jquery.dataTables.min.js'    
            'bundles/pages/js/table-data.js' 
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}


{%endblock%}